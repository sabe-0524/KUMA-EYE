# Backend Environment Variables (for Cloud Run)

# Database (Supabase)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/postgres

# Firebase
FIREBASE_PROJECT_ID=kuma-eye
# FIREBASE_SERVICE_ACCOUNT_KEY=  # Cloud Runでは不要（ADC使用）

# Storage
STORAGE_TYPE=gcs
GCS_BUCKET_NAME=kuma-eye.firebasestorage.app

# Detection Model
MODEL_PATH=/app/models/bear_detector.pt
DETECTION_CONFIDENCE_THRESHOLD=0.5
DEFAULT_FRAME_INTERVAL_SECONDS=5

# File Upload
MAX_FILE_SIZE_MB=500

# CORS (本番URLに更新)
CORS_ORIGINS=https://kuma-eye.web.app

# Application
DEBUG=false
API_V1_PREFIX=/api/v1
