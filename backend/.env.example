# =============================================================================
# Bear Detection System - Environment Variables
# =============================================================================

# Database
DATABASE_URL=postgresql://bearuser:bearpass@localhost:5432/bear_detection_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_ALWAYS_EAGER=true

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/app/storage

# Firebase
FIREBASE_PROJECT_ID=kuma-eye
# ローカルでADCが使えない場合はサービスアカウントJSONの絶対パスを指定
# FIREBASE_SERVICE_ACCOUNT_KEY=/absolute/path/to/firebase-service-account.json

# Detection Model
MODEL_PATH=/app/models/bear_detector.pt
DETECTION_CONFIDENCE_THRESHOLD=0.5
DEFAULT_FRAME_INTERVAL_SECONDS=5

# File Upload
MAX_FILE_SIZE_MB=500
ALLOWED_IMAGE_TYPES=image/jpeg,image/png
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime,video/x-msvideo

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# SMTP (Email Notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=your-email@example.com
SMTP_USE_TLS=true

# Nearby notification settings
NOTIFY_RADIUS_METERS=5000
NOTIFY_STALE_MINUTES=30
GEOCODING_ENABLED=true
GEOCODING_TIMEOUT_SECONDS=5
GEOCODING_USER_AGENT=KUMA-EYE/1.0 (bear-alert-notifier)
GEOCODING_BASE_URL=https://nominatim.openstreetmap.org

# Application
DEBUG=true
API_V1_PREFIX=/api/v1
APP_BASE_URL=http://localhost:8000
